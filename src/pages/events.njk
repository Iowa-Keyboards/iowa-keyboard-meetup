<h2>Upcoming Events</h2>

{% set pastEvents = "false" %}
{%- for event in events | sort(true, true, 'date') %}
  {% if event.date | inPast %}
    {% if pastEvents == "false" %}
      {% set pastEvents = "true" %}
      <hr />
      <h2>Past Events</h2>
    {% endif %}
  {% endif %}
  {% include "event.njk" %}
{%- endfor %}